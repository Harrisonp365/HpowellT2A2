<% if listing.errors.any? %>
    <div class="errors">
        <% listing.errors.full_messages.each do |error| %>
            <p> <%= error %> </p>
        <% end %>
    </div>
<% end %>

<%= form_with model: listing, local: true do |form| %>
   
    <div>
        <p> If you are looking to purchase please put "WTB:" before the title of the shoes you are looking to purchase. </p>
    </div>

    <div>
        <%= form.label :brand_id %>
        <%= form.select(:brand_id, brands.map {|b| [b.name, b.id]}) %>
    </div>

    <div>
        <%= form.label :category_id %>
        <%= form.select(:category_id, categories.map {|c| [c.name, c.id]}) %>
    </div>
    
    <div>
        <%= form.label :title %>
        <%= form.text_field :title, value: listing.title %>
    </div>
    
    <div>
        <%= form.label :description %>
        <%= form.text_area :description, value: listing.description %>
    </div>
    
    <div>
        <%= form.label :price %>
        <%= form.number_field :price, min: 0, value: listing.price %>
    </div>
    

    <div>
        <%= form.label :picture %>
        <%= form.file_field :picture, accept: "image/png,image/gif,image/jpeg,image/jpg", value: listing.picture %>
    </div>

    <div>
        <%= form.submit %>
    </div>
    
<% end %>